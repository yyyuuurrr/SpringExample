<?xml version="1.0" encoding="UTF-8"?>

 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
 <mapper namespace="com.marondal.spring.ex.mybatis.repository.ReviewRepository">
 
 	<select id="selectReview" parameterType="int" 
 	resultType="com.marondal.spring.ex.mybatis.domain.Review">
 		SELECT 
 			`id`
 			, `storeId`
 			, `menu`
 			, `userName`
 			, `point`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`new_review`
 		WHERE
 			`id` = #{id};	
 	
 	</select>
 	
 	<insert id="insertReview" parameterType="map">
 		INSERT INTO	
 			`new_review`
		(
 			`storeId`
 			, `menu`
 			, `userName`
 			, `point`
 			
		)
		VALUE
		(
			#{storeId}
			, #{menu}
			, #{userName}
			, #{point}
		)		
 	
 	</insert>
 	
 	<insert id="insertReviewByObject" parameterType="com.marondal.spring.ex.mybatis.domain.Review">
  		INSERT INTO	
 			`new_review`
		(
 			`storeId`
 			, `menu`
 			, `userName`
 			, `point`
 			, `review`
		)
		VALUE
		(
 			#{storeId}
 			, #{menu}
 			, #{userName}
 			, #{point}
 			, #{review}
 		
 		)
 	</insert>
 
 </mapper>